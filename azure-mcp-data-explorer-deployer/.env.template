# ADX/Kusto cluster URL (include https://)
ADX_CLUSTER_URL=https://<yourcluster>.<region>.kusto.windows.net

# Optional defaults
ADX_DATABASE=ynot
ADX_TABLE=hello-world

# Persisted auth record (per user). This file is safe to keep local but should not be committed.
ADX_AUTH_RECORD_PATH=~/.azure/adx_auth_record.json

# Linux containers/Codespaces typically don't have a keychain. Allow unencrypted token cache.
ADX_ALLOW_UNENCRYPTED_CACHE=true

# Token cache name prefix. Actual file ends up in ~/.IdentityService/
ADX_TOKEN_CACHE_NAME=adx_token_cache

# Auth preference:
# - By default, if a cached device-code auth record/token cache exists, the helper will use it and skip Azure CLI attempts.
# - Set this true to prefer Azure CLI when you have `az login` working in the container.
ADX_TRY_AZURE_CLI_FIRST=false
