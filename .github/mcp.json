{
  "mcpServers": {
    "azure": {
      "command": "npx",
      "args": ["-y", "@azure/mcp@latest", "server", "start"]
    },
    "azure-devops": {
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp"],
      "env": {
        "ADO_PERSONAL_ACCESS_TOKEN": "${ADO_PERSONAL_ACCESS_TOKEN}",
        "ADO_ORG": "${ADO_ORG}"
      }
    },
    "azure-data-explorer": {
      "command": "npx",
      "args": ["-y", "adx-mcp-server"]
    }
  }
}
